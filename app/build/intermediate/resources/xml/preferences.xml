<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
	
	<PreferenceCategory android:title="General">
		
		<SwitchPreference
            android:defaultValue="true"
            android:key="@string/settings_preview_video_key"
            android:title="@string/settings_preview_video_title"
			android:summary="@string/settings_preview_video_summary"/>
		
		<SwitchPreference
            android:defaultValue="true"
            android:key="@string/settings_save_file_when_sharing_key"
            android:title="@string/settings_save_file_when_sharing_title"
			android:summary="@string/settings_save_file_when_sharing_summary"/>
		
		<SwitchPreference
            android:defaultValue="false"
            android:key="theme"
            android:title="Dark Theme"/>
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:title="Check for updates">
		
		<SwitchPreference
            android:defaultValue="true"
            android:key="@string/settings_automatic_update_key"
            android:title="@string/settings_automatic_update_title"
			android:summary="@string/settings_automatic_update_summary"/>
		
		<PreferenceScreen
			android:title="App Update"
			android:key="check_update_app"
			android:summary="Check for app update"/>

		<PreferenceScreen
			android:title="Status Saver"
			android:key="check_update_status_saver"
			android:summary="Check for Status Saver updates"/>

		<PreferenceScreen
			android:title="Space Cleaner"
			android:key="check_update_space_cleaner"
			android:summary="Check for Space Cleaner updates"/>

	</PreferenceCategory>
	
	<PreferenceCategory
		android:title="About">
		
		<PreferenceScreen
			android:title="Developer"
			android:key="app_developer"
			android:summary="Aswanth V C"/>
		
		<PreferenceScreen
			android:title="Status Saver Version"
			android:key="status_saver_version"
			android:summary="1"/>
		
		<PreferenceScreen
			android:title="Space Cleaner Version"
			android:key="space_cleaner_version"
			android:summary="1"/>

		<PreferenceScreen
			android:title="App Version"
			android:key="app_version"
			android:summary="1.0"/>
		
	</PreferenceCategory>
	
</PreferenceScreen>
