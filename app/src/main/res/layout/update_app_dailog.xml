<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="600dp"
	android:orientation="vertical"
	android:background="@drawable/light_border_background"
	android:layout_margin="10dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				
				<TextView
					android:id="@+id/update_app_dailogSubTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:layout_margin="10dp"
					android:layout_marginTop="5dp"
					/>
				
				<TextView
					android:id="@+id/update_app_dailogDescription"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:layout_margin="10dp"/>

			</LinearLayout>

		</ScrollView>

	</RelativeLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="50dp">

		<Button
			android:id="@+id/update_app_dailogBtn1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Exit"
			android:layout_margin="10dp"/>

		<Button
			android:id="@+id/update_app_dailogBtn2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Download"
			android:layout_margin="10dp"/>

	</LinearLayout>

</LinearLayout>

