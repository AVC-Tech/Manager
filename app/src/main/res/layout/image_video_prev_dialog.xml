<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="10dp"
	android:maxHeight="500dp"
	android:id="@+id/image_video_prev_dialogLinearLayoutMain">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|end"
		android:weightSum="2"
		>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="left|center_vertical"
			android:gravity="left|center_vertical">

			<ImageView
				android:id="@+id/image_video_prev_dialogDownload"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/download_1"/>
			
			<ImageView
				android:layout_margin="10dp"
				android:id="@+id/image_video_prev_dialogAudio"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:tint="?attr/colorAccent"
				android:src="@drawable/audio"/>
			
			<ImageView
				android:layout_margin="10dp"
				android:id="@+id/image_video_prev_dialogShare"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/share"/>
			
			<ImageView
				android:layout_margin="10dp"
				android:id="@+id/image_video_prev_dialogExpand"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:tint="?attr/colorAccent"
				android:src="@drawable/expand"/>
			
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="right|center_vertical"
			android:layout_gravity="right|center_vertical">

			<ImageView
				android:layout_margin="10dp"
				android:id="@+id/image_video_prev_dialogCancel"
				android:layout_width="15dp"
				android:layout_height="35dp"
				android:src="@drawable/close"/>

		</LinearLayout>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<VideoView
			android:id="@+id/image_video_prev_dialogVideoView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxHeight="300dp"
			android:adjustViewBounds="true"/>

		<ImageView
			android:id="@+id/image_video_prev_dialogImageView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_launcher"
			android:maxHeight="300dp"
			android:adjustViewBounds="true"/>
		
		

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="right">

	</LinearLayout>

</LinearLayout>

